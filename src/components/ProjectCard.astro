---
const { foto, title, data, github, tech1, tech2 } = Astro.props;
---

<div
    class="w-1/2 m-10 flex flex-col items-center rounded-lg shadow-lg bg-blue-200"
>
    <header class="w-full">
        <h1
            class="text-4xl m-5 font-lexend text-center text-blue-700 font-bold"
        >
            {title}
        </h1>
        <div class="w-full px-5 pb-5">
            <img
                src={foto}
                alt="foto"
                class="w-full h-auto block rounded-xl sm:hover:scale-110 sm:hover:shadow-2xl sm:transition sm:transform duration-300"
                style="max-width: 100%;"
            />
        </div>
    </header>
    <main class="h-1/2">
        <p class="m-5 font-lexend">{data}</p>
        <div class="flex justify-between w-full">
            <div class="w-1/3 flex justify-center items-center">
                <a href={github} target="_blank"
                    ><img
                        src="/github.png"
                        alt="github"
                        class="w-10 m-5 object-contain opacity-100 hover:opacity-50 transition-opacity duration-300 ease-in-out"
                    /></a
                >
            </div>
            <div class="w-1/3 flex justify-center items-center">
                <img
                    src={tech1}
                    class="w-16 h-16 object-contain opacity-100 hover:opacity-50 transition-opacity duration-300 ease-in-out"
                />
            </div>
            <div class="w-1/3 flex justify-center items-center">
                <img
                    src={tech2}
                    class="w-16 h-16 object-contain opacity-100 hover:opacity-50 transition-opacity duration-300 ease-in-out"
                />
            </div>
        </div>
    </main>
</div>
