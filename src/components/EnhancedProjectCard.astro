---
interface Props {
    title: string;
    img: string;
    altImg: string;
    desc: string;
    github1: string;
    github2: string;
    imgGit: string;
    altImgGit: string;
    tech1: string;
    tech2: string;
    tech3: string;
}

const {
    title,
    img,
    altImg,
    desc,
    github1,
    github2,
    imgGit,
    altImgGit,
    tech1,
    tech2,
    tech3,
} = Astro.props;
---

<section
    class="group relative overflow-hidden rounded-3xl bg-white shadow-xl hover:shadow-2xl transition-all duration-500 border-2 border-transparent hover:border-mint-400 my-8"
>
    <div
        class="absolute inset-0 bg-gradient-to-r from-mint-400/0 to-teal-400/0 group-hover:from-mint-400/10 group-hover:to-teal-400/10 transition-all duration-500"
    >
    </div>

    <!-- Imagen del proyecto con overlay -->
    <div class="relative overflow-hidden h-64 sm:h-80">
        <img
            src={img}
            alt={altImg}
            class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-700"
        />
        <div
            class="absolute inset-0 bg-gradient-to-t from-black/70 via-black/20 to-transparent opacity-60 group-hover:opacity-40 transition-opacity duration-500"
        >
        </div>

        <!-- Título flotante sobre la imagen -->
        <div class="absolute bottom-0 left-0 right-0 p-6">
            <h3
                class="font-lexend font-bold text-3xl text-white drop-shadow-lg"
            >
                {title}
            </h3>
        </div>
    </div>

    <!-- Contenido -->
    <div class="relative p-6 sm:p-8">
        <p
            class="font-lexend text-gray-700 text-base sm:text-lg leading-relaxed mb-6"
        >
            {desc}
        </p>

        <!-- Tecnologías -->
        <div class="flex gap-4 mb-6 items-center">
            <span class="font-lexend font-semibold text-mint-700"
                >Tech Stack:</span
            >
            <div class="flex gap-3">
                <img
                    src={tech1}
                    alt="Tech 1"
                    class="w-8 h-8 object-contain hover:scale-125 transition-transform"
                />
                <img
                    src={tech2}
                    alt="Tech 2"
                    class="w-8 h-8 object-contain hover:scale-125 transition-transform"
                />
                <img
                    src={tech3}
                    alt="Tech 3"
                    class="w-8 h-8 object-contain hover:scale-125 transition-transform"
                />
            </div>
        </div>

        <!-- Botones de GitHub -->
        <div class="flex flex-col sm:flex-row gap-4">
            <a
                href={github1}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-3 px-6 py-3 bg-gradient-to-r from-mint-500 to-teal-500 text-white font-lexend font-semibold rounded-xl hover:scale-105 hover:shadow-lg hover:shadow-mint-500/50 transition-all duration-300"
            >
                <img src={imgGit} alt={altImgGit} class="w-5 h-5 invert" />
                <span>Backend</span>
            </a>

            <a
                href={github2}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center justify-center gap-3 px-6 py-3 border-2 border-mint-500 text-mint-700 font-lexend font-semibold rounded-xl hover:bg-mint-500 hover:text-white transition-all duration-300"
            >
                <img src={imgGit} alt={altImgGit} class="w-5 h-5" />
                <span>Frontend</span>
            </a>
        </div>
    </div>
</section>
