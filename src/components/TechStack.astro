---
import { Image } from "astro:assets";

import javaIcon from "../assets/images/java.png";
import angularIcon from "../assets/images/angular.png";
import typeScriptIcon from "../assets/images/typescript.png";
import springIcon from "../assets/images/spring.png";
import postgresIcon from "../assets/images/postgres.png";
import dockerIcon from "../assets/images/docker.png";
import tailwindIcon from "../assets/images/tailwind.svg";
import gitIcon from "../assets/images/git.png";

const technologies = [
    { name: "Java", icon: javaIcon },
    { name: "Spring Boot", icon: springIcon },
    { name: "Angular", icon: angularIcon },
    { name: "PostgreSQL", icon: postgresIcon },
    { name: "TypeScript", icon: typeScriptIcon },
    { name: "Docker", icon: dockerIcon },
    { name: "Git", icon: gitIcon },
    { name: "TailwindCSS", icon: tailwindIcon },
];
---

<section class="w-full h-auto py-20 bg-gradient-to-b from-mint-50 to-white">
    <h2
        class="font-extrabold font-lexend text-5xl sm:text-6xl bg-clip-text text-transparent bg-gradient-to-r from-mint-600 to-teal-600 text-center mb-16 reveal"
    >
        Stack Tecnol√≥gico
    </h2>

    <div
        class="grid grid-cols-2 md:grid-cols-4 gap-6 sm:gap-8 max-w-6xl mx-auto px-5 reveal"
    >
        {
            technologies.map((tech) => (
                <div class="flex flex-col items-center p-6 sm:p-8 bg-white rounded-2xl shadow-lg hover:shadow-2xl hover:-translate-y-3 hover:border-mint-400 border-2 border-transparent transition-all duration-300 group">
                    <div class="w-16 h-16 sm:w-20 sm:h-20 mb-4 flex items-center justify-center group-hover:scale-110 transition-transform duration-300">
                        <Image
                            src={tech.icon}
                            alt={tech.name}
                            width={80}
                            height={80}
                            class="w-full h-full object-contain"
                        />
                    </div>
                    <span class="font-lexend font-semibold text-gray-700 text-center">
                        {tech.name}
                    </span>
                    <div class="w-0 h-1 bg-gradient-to-r from-mint-400 to-teal-500 group-hover:w-full transition-all duration-300 mt-2" />
                </div>
            ))
        }
    </div>
</section>
