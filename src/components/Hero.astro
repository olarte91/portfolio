---
import { Image } from "astro:assets";

import miguel from "../assets/images/miguel.jpg";
---

<section class="relative overflow-hidden min-h-screen bg-black">
    <div
        class="relative flex flex-col sm:flex-row w-full min-h-screen justify-center items-center gap-12 px-5 py-20"
    >
        <!-- Contenido de texto -->
        <div
            class="w-full flex flex-col justify-center items-center z-10 space-y-6"
        >
            <div class="relative inline-block">
                <span
                    class="absolute inset-0 z-0 select-none font-lexend font-extrabold text-8xl sm:text-9xl text-center
               text-mint-600 [-webkit-text-stroke:15px_#059669] opacity-70 blur-[8px] animate-fade-in [animation-delay:0.9s] [animation-fill-mode:both]"
                >
                    Miguel Olarte
                </span>

                <h1
                    class="relative z-10 font-lexend font-extrabold text-8xl text-center sm:text-9xl
             text-white [-webkit-text-stroke:1px_white] animate-fade-in [animation-delay:0.3s] [animation-fill-mode:both]"
                >
                    Miguel Olarte
                </h1>
            </div>

            <p
                class="font-lexend font-light text-2xl sm:text-3xl text-white animate-fade-in-delay text-center"
            >
                Desarrollador Backend Junior | Java
            </p>

            <!-- Botones CTA -->
            <div class="flex flex-col sm:flex-row gap-4 mt-8 animate-slide-up">
                <a
                    href="#proyectos"
                    class="px-8 py-4 bg-gradient-to-b from-mint-500 to-teal-800 text-white font-lexend font-semibold rounded-xl hover:scale-105 hover:animate-pulse hover:shadow-mint-500/50 transition-all duration-300 text-center"
                >
                    Proyectos
                </a>
                <a
                    href="#contacto"
                    class="px-8 py-4 border-2 border-mint-500 text-mint-300 font-lexend font-semibold rounded-xl hover:bg-mint-500 hover:text-white transition-all duration-300 text-center"
                >
                    Contacto
                </a>
                <a
                    href="/documentos/Miguel_Olarte_CV.pdf"
                    download="CV-Miguel-Olarte-Backend-Developer.pdf"
                    class="group px-8 py-4 bg-gradient-to-b from-mint-600 to-teal-800 text-white font-lexend font-semibold rounded-xl hover:scale-105 hover:animate-pulse hover:shadow-mint-500/50 transition-all duration-300 text-center flex items-center gap-3"
                >
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="2"
                        stroke="currentColor"
                        class="w-6 h-6 group-hover:animate-bounce"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3"
                        ></path>
                    </svg>
                    Descargar CV
                </a>
            </div>
        </div>

        <!-- Imagen de perfil -->
        <div class="w-full flex justify-center items-center">
            <div class="relative group">
                <!-- Efecto de halo animado -->
                <div
                    class="absolute -inset-1 bg-gradient-to-r from-mint-400 to-teal-500 rounded-full blur-lg opacity-80 group-hover:opacity-90 transition duration-400 animate-pulse"
                >
                </div>

                <Image
                    src={miguel}
                    alt="Miguel Olarte - Desarrollador Backend Java"
                    width={500}
                    height={500}
                    class="relative w-80 h-80 sm:w-96 sm:h-96 rounded-full object-top object-cover border-4 border-mint-600 shadow-2xl reveal"
                />
            </div>
        </div>
    </div>
</section>
